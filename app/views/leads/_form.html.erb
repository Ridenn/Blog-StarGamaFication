<%= simple_form_for @lead, html: ({class: 'form-lead col-xs-12 col-md-6'}) do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@lead.errors.count, "error")} prohibited this lead from being saved:" %>
      </h2>
      <ul>
        <% @lead.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group_name">
    <%= f.input :name, label: 'Nome:' %>
    <%= f.input :surname, label: 'Sobrenome:' %>
  </div>
  <br />
  <div class="form-group_email ">
    <%= f.input :email, label: 'Email:' %>
  </div>
  <br />
  <div class="form-group">
    <%= label_tag "Qual a sua ocupação?" %>
    <%= f.select :occupation, Lead.options_for_select %>
  </div>
  <div class="form-group_btn">
    <%= f.button :submit, 'Cadastrar' %>
  </div>
<% end %>
