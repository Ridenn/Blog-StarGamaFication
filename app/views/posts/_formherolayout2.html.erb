  <%= simple_form_for @lead, html: ({class: 'form-lead'}) do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@lead.errors.count, "error")} prohibited this lead from being saved:" %>
      </h2>
      <ul>
        <% @lead.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
        <%= f.input :name, label: 'Nome:' %>
  </div>
  <div class="form-group">
    <%= f.input :surname, label: 'Sobrenome:' %>
  </div>
  <div class="form-group">
    <%= f.input :email, label: 'Email:' %>
  </div>
    
 <div class="form-group_btn">
    <%= f.button :submit, 'Cadastrar' %>
  </div>
<% end %>