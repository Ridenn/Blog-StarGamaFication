<div class="row" data-no-turbolink="true" >
  <%= simple_form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:" %>
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :title, label: "Titulo",class: "form-control" %>
    </div>

    <div class="form-group">
      <div data-no-turbolink>
        <%= f.text_area :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, label: "Postagem", class: "form-control post-form-body ckeditor" %>
      </div>
    </div>

    <div class="form-group_btn">
      <%= f.button :submit, "Postar" %>
    </div>
  <% end %>
</div>
